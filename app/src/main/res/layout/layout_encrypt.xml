<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/tv_title"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/theme_default"
        android:text="SEND"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:padding="5dp"
        android:layout_below="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_encrypt_pin"
            android:text="Pin:"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:textColor="@color/theme_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:text="0.000"
            android:textColor="#fff"
            android:background="#444"
            android:paddingLeft="5dp"
            android:id="@+id/et_encrypt_pin"
            android:layout_alignBottom="@id/tv_encrypt_pin"
            android:inputType="numberDecimal"
            android:textSize="25sp"
            android:layout_toRightOf="@id/tv_encrypt_pin"
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_encrypt_pin_confirm"
            android:text="Confirm:"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:textColor="@color/theme_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:text="0.000"
            android:textColor="#fff"
            android:background="#444"
            android:paddingLeft="5dp"
            android:id="@+id/et_encrypt_pin_confirm"
            android:layout_alignBottom="@id/tv_encrypt_pin"
            android:inputType="numberDecimal"
            android:textSize="25sp"
            android:layout_toRightOf="@id/tv_encrypt_pin_confirm"
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="20dp" />



        <TextView
            android:id="@+id/tv_alert_encrypt"
            android:textColor="#f00"
            android:textStyle="bold"
            android:textSize="15sp"
            android:visibility="invisible"
            android:text=""
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_encrypt_pin_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_below="@id/tv_alert_encrypt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_ok_send"
                android:text="OK"
                android:layout_weight=".5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_cancel_send"
                android:text="CANCEL"
                android:layout_weight=".5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>